{
  "name": "M1-Transcoder",
  "productName": "M1-Transcoder",
  "version": "1.5.0",
  "description": "Mach1 Spatial layback/conversion application",
  "main": "app/main.js",
  "scripts": {
    "dev": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "package-mac": "electron-builder",
    "package-win": "electron-builder --x64"
  },
  "build": {
    "npmRebuild": "false",
    "appId": "com.mach1.spatial.transcoder",
    "afterSign": "scripts/notarize.js",
    "extraResources": [
      {
        "from": "./app/extraResources/",
        "to": "extraResources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "app/assets/mac/icon.icns",
      "asar": true,
      "x64ArchFiles": "Contents/Resources/extraResources/**",
      "target": [
        {
          "target": "dir",
          "arch": [
            "universal"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist"
    },
    "win": {
      "icon": "/app/assets/win/icon.ico",
      "asar": true,
      "target": "portable"
    },
    "portable": {
      "unicode": false,
      "artifactName": "M1-Transcoder.exe"
    }
  },
  "repository": "",
  "keywords": [
    "Mach1",
    "Spatial",
    "Transcoder",
    "transcode",
    "spatial audio",
    "surround audio"
  ],
  "author": "Mach1",
  "license": "SEE LICENSE IN mach1-semi-open-license.md",
  "devDependencies": {
    "electron-notarize": "^1.2.2",
    "@electron/osx-sign": "^1.0.5",
    "dotenv": "^16.3.1",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "@electron/asar": "^3.2.8",
    "electron-download-manager": "^2.1.2",
    "electron-is": "^3.0.0",
    "electron-log": "^4.4.8",
    "extract-zip": "^2.0.1",
    "hazardous": "^0.3.0",
    "mv": "^2.1.1",
    "node-gyp": "^9.4.0",
    "rimraf": "^5.0.1"
  }
}
